package org.selenium;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.selenium.pom.BaseTest;
import org.testng.Assert;
import org.testng.annotations.Test;

public class MyFirstTestCase extends BaseTest {
	
	@Test
	public void dummyTest()
	{
		WebDriver driver = new ChromeDriver();
		   driver.manage().window().maximize();
		  driver.get("https://askomdch.com/");
		  
		     driver.findElement(By.xpath("//li[@id='menu-item-1227']//a[@class='menu-link'][normalize-space()='Store']")).click();
		     driver.findElement(By.xpath("(//input[@id='woocommerce-product-search-field-0'])[1]")).sendKeys("Blue");
		      driver.findElement(By.cssSelector("button[value='Search']")).click();
		      
		      Assert.assertEquals(driver.findElement(By.cssSelector(".woocommerce-products-header__title.page-title")), "Blue");
		      
		       driver.findElement(By.xpath("(//a[@aria-label='Add “Denim Blue Jeans” to your cart'])[1]")).click();
		          
		       
		        driver.findElement(By.cssSelector("a[title='View cart']")).click();
		       
	}

}
